{% extends 'base.html.twig' %}

{% block title %}
{{ 'title.bookmarks'|trans }}
{% endblock %}

{% block body %}

<h1>{{ 'title.bookmarks'|trans }}</h1>

{% if bookmarks is defined and bookmarks|length %}

{% for bookmark in bookmarks %}
<dl>
    <dt>{{ 'label.id'|trans }}</dt>
    <dd>{{ loop.index0 }}</dd>
    <dt>{{ 'label.url'|trans }}</dt>
    <dd>{{ bookmark.url }}</dd>
    <dt>{{ 'label.tags'|trans }}</dt>
    <dd>{%  for x in  bookmark.tags %}
        {{ x }},
          {% endfor %}
    </dd>
    <dt><a href="{{ path('bookmarks_view', {'id': loop.index0 }) }}">{{ 'label.link'|trans }}</a></dt>


</dl>
{% endfor %}

{% else %}
<p>
    {{ 'message.empty_list'|trans }}
</p>
{% endif %}

{% endblock %}